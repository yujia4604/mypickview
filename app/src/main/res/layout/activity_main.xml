<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
  android:layout_width="match_parent"
  android:layout_height="match_parent"
  android:orientation="vertical">

  <Button
    android:id="@+id/btn_test_pickerview"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:lines="2"
    android:onClick="onClick"
    android:text="PickerView"
    android:textAllCaps="false" />

  <Button
    android:id="@+id/btn_timepicker"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:lines="2"
    android:onClick="onClick"
    android:text="TimePicker"
    android:textAllCaps="false" />

  <Button
    android:id="@+id/btn_mixedtimepicker"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:lines="2"
    android:onClick="onClick"
    android:text="MixedTimePicker"
    android:textAllCaps="false" />

  <Button
    android:id="@+id/btn_optionpicker"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:lines="2"
    android:onClick="onClick"
    android:text="OptionPicker"
    android:textAllCaps="false" />

  <Button
    android:id="@+id/btn_picker_configs"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:lines="2"
    android:onClick="onClick"
    android:text="配置picker样式"
    android:textAllCaps="false" />

    <FrameLayout
        android:id="@+id/conent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

    </FrameLayout>

</LinearLayout>